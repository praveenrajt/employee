<div class="row justify-content-md-center">
  <div class="col-6 col-md-4">
    <%= form_for(@employee) do |form| %>

      <div class="form-group">
        <label>First Name</label>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label>Last Name</label>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Age</label>
        <%= form.text_field :age, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Designation</label>
        <%= form.text_field :designation, class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Gender</label>
        <%= form.select(:gender, Employee::GENDER.collect { |gender| [gender.humanize, gender] }, {}, {class: 'custom-select mr-sm-2'}) %>
      </div>

      <div class="form-group text-center">
        <%= form.submit "Save", class: 'btn btn-primary' %>
        <%= link_to "Cancel", employees_path, class: "btn btn-warning" %>
      </div>

    <% end %>
  </div>
</div>

